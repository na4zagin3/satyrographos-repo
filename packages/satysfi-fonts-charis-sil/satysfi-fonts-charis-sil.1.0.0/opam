depends: [
  "satysfi" { >= "0.0.5" & < "0.0.6" }
  "satyrographos" { >= "0.0.2.6" & < "0.0.3" }
]
build: [
  ["unzip" "-j" "-o" "CharisSIL-5.000.zip" "*.ttf" "-d" "charis-sil"]
]
install: [
  ["satyrographos" "opam" "install"
   "--name" "fonts-charis-sil"
   "--prefix" "%{prefix}%"
   "--script" "%{build}%/Satyristes"]
]
